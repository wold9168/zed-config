// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "ui_font_size": 26,
  "buffer_font_size": 30,
  "theme": {
    "mode": "system",
    "light": "Solarized Light",
    "dark": "One Dark"
  },
  "auto_install_extensions": {
    "php": true,
    "html": true,
    "r": true,
    "scss": true,
    "toml": true,
    "vue": true,
    "sql": true,
    "rainbow-csv": true,

    "latex": true,
    "liquid": true,

    "just": true,
    "make": true,

    "ruby": true,
    "perl": true,
    "lua": true,
    "scheme": true,
    "python-requirements": true,

    "java": true,
    "scala": true,
    "verilog": true,
    "fsharp": true,
    "d": true,

    "dockerfile": true,
    "tokyo-night": true,
    "solarized": true
  }
}
