// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "metrics": false
  },
  "show_edit_predictions": false,
  "agent": {
    "single_file_review": false,
    "model_parameters": [],
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-chat"
    },
    "version": "2"
  },
  "vim_mode": false,
  "base_keymap": "VSCode",
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Light",
    "dark": "One Dark"
  },
  "auto_install_extensions": {
    "php": true,
    "html": true,
    "r": true,
    "scss": true,
    "toml": true,
    "vue": true,
    "sql": true,
    "rainbow-csv": true,

    "latex": true,
    "liquid": true,
    "typst": true,

    "just": true,
    "make": true,
    "neocmake": true,

    "ruby": true,
    "perl": true,
    "lua": true,
    "scheme": true,
    "python-requirements": true,

    "java": true,
    "scala": true,
    "verilog": true,
    "fsharp": true,
    "d": true,
    "csharp": true,
    "haskell": true,

    "dockerfile": true,
    "git-firefly": true,

    "tokyo-night": true,
    "solarized": true
  },

  // "buffer_font_family": "Noto Sans Mono CJK SC",
  "buffer_font_family": "Source Han Mono SC",
  // "buffer_font_family": "IBM Plex Mono",
  "buffer_font_fallbacks": ["BlexMono Nerd Font", "Noto Sans CJK SC"]
}
