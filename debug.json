// Some example tasks for common languages.
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug active PHP file",
    "adapter": "PHP",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
  },
  {
    "label": "Debug active Python file",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
  },
  {
    "label": "Debug active JavaScript file",
    "adapter": "JavaScript",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
  },
  {
    "label": "JavaScript debug terminal",
    "adapter": "JavaScript",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "console": "integratedTerminal",
  },
  {
    "label": "Go (Delve)",
    "adapter": "Delve",
    "program": "$ZED_FILE",
    "request": "launch",
    "mode": "debug",
  },
  {
    "label": "Run integration tests",
    "adapter": "Delve",
    "request": "launch",
    "mode": "test",
    "program": "$ZED_DIRNAME",
    "buildFlags": ["-tags", "integration"],
  },
  {
    "label": "Debug C binary (make)",
    "build": {
      "command": "make",
      "args": ["-j8"],
      "cwd": "$ZED_WORKTREE_ROOT",
    },
    "program": "$ZED_WORKTREE_ROOT/build/prog",
    "request": "launch",
    "adapter": "CodeLLDB",
  },
  {
    "label": "Debug C binary (clang)",
    "build": {
      "command": "clang",
      "args": ["-g","$ZED_FILE","-o","$ZED_DIRNAME/$ZED_STEM"],
      "cwd": "$ZED_WORKTREE_ROOT",
    },
    "program": "$ZED_DIRNAME/$ZED_STEM",
    "request": "launch",
    "adapter": "CodeLLDB",
  },
]
